<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="unifor.com.br.findclass.views.InformacoesActivity">


    <TextView
        android:text="            Informações do registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_tituloinf"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/tamanho_titulo"
        android:padding="10dp" />

    <TextView
        android:id="@+id/txt_nome_sala_inf"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="@string/txt_nome_sala_inf"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/textView_tituloinf"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_desmarcar"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_red_light"
        android:text="@string/btnDesmarcar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="287dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />

</RelativeLayout>